<div class="yui-gb sliderfalse">
	<h1 class="entete1">Nos articles</h1>
	<div class="articles">
		<% if !@articles.blank? %>
		<ul>
			<% @articles.each do |article| %>
				<li class="article">
				<%= article.title %> : <%= truncate(article.content, :length => 60) %><br/>
				<%= link_to "Lire", article_path(article) %>
				<%- if user_signed_in? -%>
				 | <%= link_to "Modifier", edit_article_path(article) %>
				 | <%= link_to "Supprimer", article_path(article), :method => :delete %>
				<%- end -%>
				</li>
			<% end %>
			<% else %>
				<li class="article">
					Pas d'article pour l'instant
				</li>
			<% end %>
		</ul>
		<%= will_paginate @articles, :previous_label => "Précédent", :next_label => "Suivant" %>		
	</div>
</div>
<div class="yui-gb maincontent">

</div>