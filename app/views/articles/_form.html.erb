		<% form_for article, :html => {:multipart => true} do |f| -%>
			<%= f.error_messages %>
			
			<p>
				<%= f.label :title, "Titre" %> :
				<%= f.text_field :title %>
			</p>
			<p>
				<%= f.label :auteur, "Auteur" %> :
				<%= f.text_field :auteur %>
			</p>
			<p>
				<%= f.label :provenance, "Tirée de" %> :
				<%= f.text_field :provenance %>
			</p>
			<p>
				<%= f.label :date_pub, "Date Publication" %>:
				<%= f.date_select :date_pub %>
			</p>
			<p>
				<%= f.label :content, "Contenu" %> :<br/>
				<%= f.text_area :content, :rows => 10, :cols => 60, :class => "mceEditor" %>
			</p>
			<p>
				<%= f.label :photo, "Image" %> :<br/>
				<%= f.file_field :photo %>
			</p>
			<% f.fields_for :paragraphs do |paragraph_form| %>
				<p>
					<%= paragraph_form.label :photo1, "Image 1" %> :
					<%= paragraph_form.file_field :photo1 %>
				</p>
				<p>
					<%= paragraph_form.label :photo2, "Image 2" %> :
					<%= paragraph_form.file_field :photo2 %>
				</p>
				<p>
					<%= paragraph_form.label :photo3, "Image 3" %> :
					<%= paragraph_form.file_field :photo3 %>
				</p>
				<p>
					<%= paragraph_form.label :content, "Contenu" %> :<br/>
					<%= paragraph_form.text_area :content, :rows => 25, :cols => 60, :class => "mceEditor" %>
				</p>

			<% end %>
			
			<p><%= f.submit "Créer" %></p>
		  
		<% end -%>