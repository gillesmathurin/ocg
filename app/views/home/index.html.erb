<div class="yui-g slider"> 
  	<div class="anythingSlider">
  		<div class="wrapper">
  			<ul>
  				<li>
  					<%= image_tag("slide-1.png") %>
  				</li>
  				<li>
  					<%= image_tag("slide-2.jpg") %>
  				</li>
  				<li>
  					<%= image_tag("slide-3.jpg") %>
  				</li>
  				<li>
  					<%= image_tag("slide-4.jpg") %>
  				</li>
  			</ul>
  		</div> <!-- END AnythingSlider -->
  	</div>
  </div> 
<div class="yui-gb maincontent"> 
      <div class="yui-u first">
		<h1 class="entete1">Dernières Publications</h1>
		<ul class="recent_articles">
			<% unless @articles.empty? %>
		 		<% @articles.each do |article| %>
					<li class="article">
						<%=h article.title %> : <%= truncate(article.content, :length => 50) %> … <%= link_to "Lire …", article_path(article.id) %>
					</li>
				<% end %>
			<% else %>
				<li class="article">Pas d'articles pour le moment</li>
			<% end %>
		</ul>
			
  		
      </div> 
      <div class="yui-u">
		<h1 class="entete1">Prochains Evénements</h1>
	 	<ul class="next_events">
	 		<%- unless @events.empty? -%>
				<%- @events.each do |event| -%>
					<li class="event">
						<span class="date"><%= event.start_date.strftime("%d/%m/%Y") %> au <%= event.end_date.strftime("%d/%m/%Y") %></span> :<b> <%=h event.title %></b> - <%= truncate(event.description, :length => 50) %><br/> <%# link_to "+ d'infos …", event_path(event.id) %>
					</li>
				<%- end -%>
			<%- else -%>
				<li class="event">Pas d'événements à venir pour le moment</li>
			<%- end -%>
	 	</ul>
  		<ul class="next_events"><li><%= link_to "Voir tout le programme", events_path() %></li></ul>
      </div> 
      <div class="yui-u"> 
		<h1 class="entete1">Dashboard</h1>
		<p>
			<%= link_to "Identifiez-vous", "" %>
		</p>
      </div> 
  </div>