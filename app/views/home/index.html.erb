<div class="yui-g slider"> 
  	<div class="anythingSlider">
  		<div class="wrapper">
  			<ul>
  				<li>
  					<%= image_tag("slide-1.png") %>
  				</li>
  				<li>
  					<%= image_tag("slide-2.jpg") %>
  				</li>
  				<li>
  					<%= image_tag("slide-3.jpg") %>
  				</li>
  				<li>
  					<%= image_tag("slide-4.jpg") %>
  				</li>
  			</ul>
  		</div> <!-- END AnythingSlider -->
  	</div>
  </div> 

<div class="yui-gb maincontent"> 
      <div class="yui-u first">
		<h1 class="entete1">Dernières Publications</h1>
		<ul class="recent_articles">
			<% if !@articles.blank? %>
			  <% for article in @articles %>
			    <li class>
					<p><span class="date"><%=h article.title %></span> <%= link_to "Voir …", article_path(article) %></p>
				</li>
			  <% end %>
			<% else %>
			  	<li class="article">Pas d'articles pour le moment</li>
			<% end %>
			
		</ul>
			
  		
      </div> 

      <div class="yui-u">
		<h1 class="entete1">Prochains Evénements</h1>
	 	<ul class="next_events">
	 		<%- unless @events.empty? -%>
				<%- @events.each do |event| -%>
					<li class="event">
						<span class="date"><%= formatted_date(event.start_date) %></span> :<b> <%=h event.title %></b>  <%= truncate(event.description, :length => 50) %><br/> <%# link_to "+ d'infos …", event_path(event.id) %>
					</li>
				<%- end -%>
			<%- else -%>
				<li class="event">Pas d'événements à venir pour le moment</li>
			<%- end -%>
	 	</ul>
  		<ul class="next_events"><li><%= link_to "Voir tout le programme", events_path() %></li></ul>
      </div> 

      <div class="yui-u"> 
		<h1 class="entete1">Dashboard</h1>
		<p class="admin-login">
			<%= link_to "Accès réservé", new_user_session_path() %>
		</p>
		<ul class="next_events">
			<li>
				<%= @galleries_count %> galleries de photos, <%= link_to "à découvrir", galleries_path() %>
			</li>
		</ul>

      </div> 
</div>