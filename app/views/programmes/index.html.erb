<article id="article-content">
  <header class="entete1">
    <span class="title">Les programmes</span>
  </header>
  
  <div id="one-col">
    <% unless @programmes.empty? %>
      <ul>
        <% @programmes.each do |p| %>
          <li>Année : <%= p.annee.strftime("%Y") %> | <%= link_to "Télécharger", download_programme_programme_path(p) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <footer class="admin-links">
    <%- if user_signed_in? -%>
      <p><%= link_to "Ajouter un programme", new_programme_path() %></p>
    <%- end -%>
  </footer>
</article>