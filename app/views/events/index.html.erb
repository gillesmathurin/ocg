<%- content_for(:head) do -%>
	<%= stylesheet_link_tag 'screen' %>
	<%= javascript_include_tag 'easySlider1.7.js' %>
	 <script type="text/javascript">
		$(document).ready(function(){	
			$("#slider").easySlider(
				{
				auto: false, 
				continuous: true,
				prevText: '< Précédent',
				nextText: 'Suivant >' 
				}
			);
		});
	 </script>
<%- end -%>

<div class="yui-gb sliderfalse">
	<h1 class="entete1">Programme du Carnaval</h1>
	
	<div id="slider">
		<ul>
			<li>
				<%- unless @events_fcfg.empty? -%>
					<p class="fede">FCFG</p>
				<%- @events_fcfg.each do |event| -%>
					<p>
						<span class="date"><%= formatted_date(event.start_date) %></span> :<b> <%=h event.title %></b> <%= event.description %> <%= event.place %> 
					</p>
					<hr>
				<%- end -%>					
				<%- end -%>
			</li>
			
			<li>
				<%- unless @events_fcg.empty? -%>
					<p class="fede">FCG</p>
				<%- @events_fcg.each do |event| -%>
					<p>
						<span class="date"><%= formatted_date(event.start_date) %></span> :<b> <%=h event.title %></b> <%= event.description %> <%= event.place %><br/> 
					</p>
					<hr>
				<%- end -%>					
				<%- end -%>
			</li>
			
			<li>
				<%- unless @events_gccrp.empty? -%>
					<p class="fede">GCCRP</p>
				<%- @events_gccrp.each do |event| -%>
					<p>
						<span class="date"><%= formatted_date(event.start_date) %></span> :<b> <%=h event.title %></b> <%= event.description %> <%= event.place %><br/> 
					</p>
					<hr>
				<%- end -%>					
				<%- end -%>
			</li>
		</ul>
	</div>
	
	
</div>
<div class="yui-gb maincontent">

</div>
